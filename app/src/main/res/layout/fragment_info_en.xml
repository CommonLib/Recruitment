<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="@dimen/info_root_padding">
        <include layout="@layout/view_info_en"/>
        <ImageView
            android:id="@+id/info_iv_add_experience"
            android:layout_width="@dimen/width_228"
            android:layout_height="@dimen/height_55"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/space_20"
            android:src="@mipmap/create_profile_add_experience_en"/>

        <include layout="@layout/item_add_comment"/>

        <TextView
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_rights"/>

    </LinearLayout>
</ScrollView>